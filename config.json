{
	"description": "NFS plugin for Docker",
	"documentation": "https://github.com/robkaandorp/docker-volume-nfs",
    "entrypoint": ["/app/entrypoint.sh"],
    "env": [
        {
            "name": "NFS_PATH",
            "settable": ["value"]
        },
        {
            "name": "NFS_SERVER",
            "settable": ["value"]
        },
        {
          "name": "NFS_MOUNT_OPTS",
          "settable": ["value"]
        }
    ],
    "network": {
        "type": "host"
    },
	"interface" : {
        "types": ["docker.volumedriver/1.0"],
        "socket": "nfs.sock"
	},
	"linux": {
        "AllowAllDevices": true,
        "capabilities": ["CAP_SYS_ADMIN", "CAP_SYS_MODULE"],
        "devices": null
    },
    "mounts": [
        {
          "source": "/lib/modules",
          "destination": "/lib/modules",
          "type": "bind",
          "options": [
            "rbind"
          ]
        },
        {
          "source": "/dev",
          "destination": "/dev",
          "type": "bind",
          "options": [
            "shared",
            "rbind"
          ]
        },
        {
          "source": "/sys",
          "destination": "/sys",
          "type": "bind",
          "options": [
            "rbind"
          ]
        }
    ],
    "propagatedmount": "/mnt/volumes"
}